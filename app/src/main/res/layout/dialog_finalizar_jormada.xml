<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDanger"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_right_componentes"
        android:paddingRight="@dimen/padding_left_right_componentes">

        <TextView
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Finalizar sesion"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/title_font_zise" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/stat_sys_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont"
            android:gravity="center"
            android:text="¿ESTA DE ACUERDO EN FINALIZAR LA JORNADA ACTUAL?"
            android:paddingLeft="@dimen/padding_left_right_componentes"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:paddingTop="@dimen/margin_bottom_up_componentes"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont"
            android:gravity="center"
            android:text="SÍ FINALIZA LA JORNADA \n YA NO SE PODRÁ REALIZAR NINGÚN CAMBIO EN LA PRODUCCIÓN"
            android:paddingLeft="@dimen/padding_left_right_componentes"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:paddingTop="@dimen/margin_bottom_up_componentes"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont"
            android:gravity="center"
            android:text="¿DESEA CONTINUAR?"
            android:paddingLeft="@dimen/padding_left_right_componentes"
            android:paddingRight="@dimen/padding_left_right_componentes"
            android:paddingTop="@dimen/margin_bottom_up_componentes"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>